/* components/calendar-switch/index.wxss */
.switch-container {  
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%; 
  height: 40px;
  /* padding: 0 10px;   */
  background-color: #eee;  
  border-radius: 10px;  
  overflow: hidden;  
  position: relative;  
}  
  
.switch-item {  
  flex: 1;  
  text-align: center;  
  line-height: 40px;
  padding: 0 10px;
  font-size: 16px;
  color: #666;
  /* cursor: pointer;   */
  user-select: none;
  /* transition: background-color 0.3s;   */
}  
  
.switch-item.active {  
  color: #fff;
  background-color: #007aff;  
}